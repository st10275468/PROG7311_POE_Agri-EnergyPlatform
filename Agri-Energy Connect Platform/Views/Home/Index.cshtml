@{
    ViewData["Title"] = "Welcome";
    var userID = Context.Session.GetString("UserID");
    var userRole = Context.Session.GetString("UserRole");
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <h1 class="text-center mb-4">Agri-Energy Connect Platform</h1>
        <div class="col-md-6 col-sm-12">

            @if (string.IsNullOrEmpty(userID))
            {
                <div class="card shadow-lg">
                    <div class="card-body">
                        <h3 class="text-center mb-4">Login</h3>
                        <form method="post" action="@Url.Action("Login", "Account")">
                            <div class="mb-3">
                                <label>Email</label>
                                <input type="email" name="Email" value="Employee@gmail.com" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label>Password</label>
                                <input type="password" name="Password" value="password" class="form-control" required />
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Login</button>
                        </form>
                    </div>
                </div>
            }
            
            else
            {
                @if (userRole == "Employee")
                {
                    <!-- Employee's Home Page -->
                    <div class="card shadow-lg">
                        <div class="card-body text-center">
                            <h4>Welcome, as an employee you can...</h4>
                            <p>This area can be used for dashboard content.</p>
                            <!-- Add links for employee features -->
                            <a href="@Url.Action("AddFarmer", "Employee")" class="btn">Add a Farmer</a>
                        </div>
                    </div>
                }
                else if (userRole == "Farmer")
                {
                    <!-- Farmer's Home Page -->
                    <div class="card shadow-lg">
                        <div class="card-body text-center">
                            <h4>Welcome, as a farmer yoyu can</h4>
                            <p>This area can be used for farmer-specific content.</p>
                            <!-- Add links for farmer features -->
                            <a href="@Url.Action("AddProduct", "Farmer")" class="btn btn-primary">Add a Product</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>