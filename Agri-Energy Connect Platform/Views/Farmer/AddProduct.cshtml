@model Agri_Energy_Connect_Platform.Models.Product

@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h3 class="text-center mb-4">Add New Product</h3>

                    <form method="post" asp-action="AddProduct" asp-controller="Farmer">
                        <div class="mb-3">
                            <label asp-for="productName" class="form-label"></label>
                            <input asp-for="productName" class="form-control" />
                            <span asp-validation-for="productName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="category" class="form-label"></label>
                            <input asp-for="category" class="form-control" />
                            <span asp-validation-for="category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="description" class="form-label"></label>
                            <textarea asp-for="description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="price" class="form-label"></label>
                            <input asp-for="price" class="form-control" step="0.01" />
                            <span asp-validation-for="price" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Add Product</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
