@model List<Agri_Energy_Connect_Platform.Models.Product>
@{
    ViewData["Title"] = "My Products";
}



<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Products</h2>
        <a class="btn btn-success" href="@Url.Action("AddProduct", "Farmer")">Add New Product</a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            You do not have any products yet.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4 d-flex">
                    <div class="card shadow product-card w-100">
                        <div class="card-body text-center">
                            <h5 class="card-title">@product.productName</h5>
                           <p class="card-text"><strong>Price:</strong> R @product.price.ToString("F2")</p>
                        </div>

                        <!-- Image below details -->
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.productName" class="product-image" />
                        }
                        else
                        {
                            <img src="/images/placeholder.png" alt="No image" class="product-image" />
                        }

                        <div class="card-footer bg-transparent border-top-0 text-center">
                            <a class="btn btn-sm btn-primary" href="@Url.Action("ProductDetails", "Farmer", new { id = product.productID })">
                                View Product Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
