@model Agri_Energy_Connect_Platform.Models.Product

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="mb-4 text-center">@Model.productName</h3>
                    <p class="mb-3"><strong>Category:</strong> @Model.category</p>
                    <p class="mb-3"><strong>Price:</strong> R @Model.price.ToString("F2")</p>
                    <p class="mb-3"><strong>Description:</strong> @Model.description</p>
                    <p class="mb-3"><strong>Production Date:</strong> @Model.CreatedDate?.ToString("yyyy-MM-dd")</p>
                    <p class="mb-3">
                        <strong>Farmer:</strong>
                        @Model.Farmer?.name @Model.Farmer?.surname
                    </p>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="text-center mt-4">
                            <img src="@Model.ImageUrl" alt="Product Image" class="img-fluid rounded" style="max-width: 100%;" />
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mt-4 text-center">No image uploaded.</p>
                    }
                </div>

                <div class="card-footer text-left" style="padding-top:10px">
                    <button class="btn" onclick="window.history.back()">Back</button>
                </div>
            </div>
        </div>
    </div>
</div>
