@model List<Agri_Energy_Connect_Platform.Models.Product>

@{
    ViewData["Title"] = "Farmer's Products";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Farmer's Products</h1>

    <!-- Filter Form -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-6 col-sm-12">
            <form method="get" action="@Url.Action("ViewFarmerProducts", "Employee")">
                <div class="form-row">
                    <div class="col">
                        <select class="form-control" name="filterType" required>
                            <option value="" disabled selected>Filter By...</option>
                            <option value="Category">Category</option>
                            <option value="Farmer">Farmer</option>
                        </select>
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" name="filterValue" placeholder="Enter filter value" required />
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary w-100">Apply Filter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Display Products -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 col-sm-12 mb-4">
                    <div class="card shadow-lg">
                        <div class="card-body">
                            <h5 class="card-title">@product.productName</h5>
                            <p><strong>Category:</strong> @product.category</p>
                            <p><strong>Description:</strong> @product.description</p>
                            <p><strong>Price:</strong> R @product.price.ToString("F2")</p>
                            <p><strong>Farmer:</strong> @product.userID</p> <!-- Replace with farmer's name after matching -->
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <strong>No products available.</strong> There are no products matching your filters or in the system.
        </div>
    }
</div>
